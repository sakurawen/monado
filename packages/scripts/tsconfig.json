{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
    "allowJs": true,
		"outDir": "lib",
		"target": "es6",
    "pretty":true,
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"esModuleInterop": true,
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["lib", "node_modules", "bin"],
	"include": ["src/**/*", "index.d.ts", "src/utils/.ts"]
}
