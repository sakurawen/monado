{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
    "allowJs": true,
		"outDir": "dist",
		"target": "ES2018",
    "pretty":true,
		"module": "commonjs",
    "noUnusedLocals":true,
		"moduleResolution": "node",
    "stripInternal":true,
		"declaration": false,
		"esModuleInterop": true,
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["dist", "node_modules", "bin"],
	"include": ["src/**/*", "index.d.ts", "src/utils/.ts"]
}
