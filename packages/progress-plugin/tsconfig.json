{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
		"allowJs": true,
		"target": "ES2018",
    "outDir": "dist",
		"pretty": true,
		"module": "es2020",
		"noUnusedLocals": true,
		"moduleResolution": "Node",
		"stripInternal": true,
		"declaration": false,
		"esModuleInterop": true,
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"include": ["index.ts"]
}
