{
	"compilerOptions": {
		"baseUrl": "./",
		"jsx": "react-jsx",
		"outDir": "lib",
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"esModuleInterop": true,
    "emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"exclude": ["lib", "node_modules"],
	"include": ["src/**/*", "typings"]
}
