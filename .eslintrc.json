{
	"env": {
		"es6": true,
		"node": true
	},
  "root": true,
	"parser": "@typescript-eslint/parser",
	"extends": ["eslint:recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
