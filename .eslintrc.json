{
	"env": {
		"es6": true,
		"node": true
	},
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended"
	],

	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"no-unused-vars": "warn",
		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off"
	}
}
